prototype(Kleisli.FusionFiles:Helper.FileCondition) < prototype(Neos.Fusion:Component) {
    fileExtension = ''

    renderer = Neos.Fusion:Component {
        hasRequestFormat = ${request.format == String.toLowerCase(props.fileExtension)}
        hasFusionPrototype = Neos.Fusion:CanRender {
            type = ${q(node).property('_nodeType') + '.' + String.firstLetterToUpperCase(props.fileExtension)}
        }
        renderer = ${props.hasRequestFormat && props.hasFusionPrototype}
    }
}
